@model Projekt_Rower_Miejski.Wypozyczenia

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Informacje o wypozyczeniu roweru</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data i czas wypożyczenia:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data_czas_wypozyczenia)
        </dd>

        <dt>
            Data i czas oddania:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data_czas_oddania)
        </dd>

        <dt>
            Czas wypożyczenia:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Czas_wypozyczenia)
        </dd>

        <dt>
            Cena wypożyczenia za godzinę:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cena_wypozyczenia_za_godzine)
        </dd>

        <dt>
            Klient
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Klienci.Imie)
        </dd>

        <dt>
            Pracownik:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pracownicy.Imie)
        </dd>

        <dt>
            Rower:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rowery.Nr_ramy)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.ID_wypozyczenia }) |
    @Html.ActionLink("Wróć do listy", "Index")
</p>
